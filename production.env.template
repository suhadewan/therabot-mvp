# Production Environment Variables Template
# Copy this to .env and fill in your actual values
# NEVER commit .env file to git!

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# Get this from Render, Supabase, or your database provider
DATABASE_URL=postgresql://user:password@localhost:5432/mindmitra

# ============================================
# OPENAI API
# ============================================
# Your OpenAI API key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-actual-key-here

# ============================================
# FLASK CONFIGURATION
# ============================================
# Set to production for deployment
FLASK_ENV=production

# Generate a secure secret key:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secure_secret_key_here_generate_new_one

# ============================================
# ERROR TRACKING
# ============================================
# Sentry DSN for error tracking
# Get from: https://sentry.io after creating a project
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# RATE LIMITING
# ============================================
# Messages per hour per user
THERABOT_RATE_LIMIT_REQUESTS=20
THERABOT_RATE_LIMIT_WINDOW_HOURS=1

# ============================================
# MODEL CONFIGURATION
# ============================================
# Your fine-tuned model name
THERABOT_MODEL_NAME=ft:gpt-4o-mini-2024-07-18:personal:mindmitra:CG4e85Er

# Temperature for responses (0.0-1.0)
THERABOT_MODEL_TEMPERATURE=0.7

# Maximum tokens per response
THERABOT_MODEL_MAX_TOKENS=150

# ============================================
# GUARDRAILS
# ============================================
# Maximum words per response
THERABOT_GUARDRAILS_MAX_WORDS=75

# Maximum sentences per response
THERABOT_GUARDRAILS_MAX_SENTENCES=3

# Require questions in responses
THERABOT_GUARDRAILS_REQUIRE_QUESTION=true

# ============================================
# SECURITY (Optional but recommended)
# ============================================
# Allowed hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-app.onrender.com

# CORS origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# MONITORING (Optional)
# ============================================
# Deployment environment name
ENVIRONMENT=production

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO


